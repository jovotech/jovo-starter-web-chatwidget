{
  "compilerOptions": {
    "lib": [
      "es2017"
    ],
    "allowJs": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "removeComments": false,
    "allowUnreachableCode": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "declaration": true,
    "strict": true,
    "outDir": "dist",
    "target": "es2017",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
