@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap');
.scrollbar {
  &::-webkit-scrollbar {
    @apply w-1 h-1;
  }

  &::-webkit-scrollbar-track {
  }

  &::-webkit-scrollbar-thumb {
    @apply bg-gray-500 rounded-full;
  }

  &-invisible {
    &::-webkit-scrollbar {
      @apply w-1 h-1;
    }

    &::-webkit-scrollbar-track {
    }

    &::-webkit-scrollbar-thumb {
      @apply bg-transparent rounded-full;
    }
  }
}

